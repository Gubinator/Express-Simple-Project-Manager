extends ../layout
block projects
  
  div(class="wrapper")
    nav
        a(href="/projects/all") All projects 
        span |
        a(href="/") Home
    form(action='/projects/add' method='POST' class="section__form")
        h1 Add project
        span Project name:
        input(type="text" name='project_name' required)
        span Project description: 
        input(type="textarea" name="project_description" required)
        span Project price: 
        input(type="number" name="project_price" required)
        span Project tasks: 
        input(type="textarea" name="project_tasks" required)
        //span Add to team: 
        //input(type="text" name="project_participant" required)
        span Project start date: 
        input(type="date" name="project_start_date" required)
        span Project end date: 
        input(type="date" name="project_end_date" required)
        button(type="submit" class="form__button--submit" value="Submit") Submit
    