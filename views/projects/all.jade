extends ../layout
block projects_all
  


  div.wrapper
    nav
        a(href="/projects/") Add project
        span |
        a(href="/") Home 
        span |
        a( href="/users/logout") Logout
        span |
        a(href="/archive") Archive
    div.list__section
      h1 #{title}
      - each project, i in projects
            ul
              li(style="opacity:0.6;") Project id: #{project._id}
              li Project name: #{project.project_name}
              li Project description: #{project.project_description}
              li Project tasks: #{project.project_tasks}
              li Project price ($): #{project.project_price}
              li(class="section__date") Project start date: #{project.project_start_date}
              li(class="section__date") Project end date: #{project.project_end_date}
              li(class="section__members") Project members:
                - each member, i in project.project_members
                  span #{member}
              form(action="/projects/#{project._id}", method='GET')
                button(type="submit") Edit
              

        
    